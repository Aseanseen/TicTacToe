                android:layout_weight="1"
                android:backgroundTint="#66FFFFFF"
                android:freezesText="true"
                android:hapticFeedbackEnabled="true"
                android:textColor="#E91E63"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_11"
